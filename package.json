{
  "name": "student-event-planner",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["server", "client"],
  "scripts": {
    "dev": "concurrently -n \"SERVER,CLIENT\" -c \"bgBlue.bold,bgMagenta.bold\" \"bun run dev:server\" \"bun run dev:client\"",
    "dev:server": "bun run --filter server dev",
    "dev:client": "bun run --filter client dev",
    "build": "bun run build:server && bun run build:client",
    "build:server": "bun run --filter server build",
    "build:client": "bun run --filter client build",
    "install:all": "bun install"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
